<tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
  <td>
    <%%= <%= singular_table_name %>.<%= attribute.name %> %>
  </td>

<% end -%>
  <td>
    <div class="btn-group">
      <%%= link_to fa_icon("search-plus fw"), <%= singular_table_name %>, class: "btn btn-sm btn-outline-secondary" %>

      <%%= link_to fa_icon("edit fw"), edit_<%= singular_table_name %>_url(<%= singular_table_name %>), class: "btn btn-sm btn-outline-secondary" %>

      <%%= link_to fa_icon("trash-o fw"), <%= singular_table_name %>, method: :delete, data: { confirm: "Do you really want to delete this <%= singular_table_name %>?" }, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </td>
</tr>
